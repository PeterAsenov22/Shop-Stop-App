<form class="form center-form" method="post" enctype="multipart/form-data">
  <h2>Buy Product</h2>
  <div class="form-group">
    <label></label>
    <div class="product-card">
      <img class="product-img" src="{{product.image}}">
    </div>
  </div>
  
  <div class="form-group">
    <label for="name">Name</label>
    <input id="name" name="name" type="text" class="input-field" value="{{product.name}}" disabled/>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" name="description" type="text" 
      class="input-field" disabled>{{product.description}}</textarea>
  </div>

  <div class="form-group">
    <label for="price">Price</label>
    <input id="price" name="price" type="number" step="0.01" 
      class="input-field" value="{{product.price}}" disabled/>
  </div>

  <div class="form-group">
    <input class="btn form-btn btn-success" type="submit" class="btn" value="Buy" />
  </div>
</form>