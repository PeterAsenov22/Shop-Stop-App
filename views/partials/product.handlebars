<div class="product-card">
  <img class="product-img" src="{{image}}">
  <h2>{{name}}</h2>
  <p class="content">{{description}}</p>

  <a class="btn btn-small btn-success" href="/product/buy/{{id}}">Buy</a>
  <a class="btn btn-small btn-warning" href="/product/edit/{{id}}">Edit</a>
  <a class="btn btn-small btn-danger" href="/product/delete/{{id}}">Delete</a>
  {{#if home}}
  <a class="btn btn-small btn-primary" href="/category/{{category.name}}/products">More {{category.name}}</a>
  {{/if}}
</div>